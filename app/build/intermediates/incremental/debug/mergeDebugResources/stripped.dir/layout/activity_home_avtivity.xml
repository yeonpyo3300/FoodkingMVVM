<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/onboarding_background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".UI.HomeActivity">

    <FrameLayout
        android:id="@+id/fragments_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_bottom_home"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bottom_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#CC252424"
        app:itemIconSize="20dp"
        app:itemIconTint="#53E88B"
        app:itemRippleColor="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/home_bottom_nav_menu"

        />

</RelativeLayout>