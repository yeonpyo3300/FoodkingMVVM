<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.FoodMenuActivity"
    android:padding="20dp"
    android:background="@drawable/onboarding_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Moon Cake restaurant"
        android:textSize="20sp"
        android:textColor="#19C120"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/food_menu_restaurant"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pic_restaurant" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"/>

</LinearLayout>

